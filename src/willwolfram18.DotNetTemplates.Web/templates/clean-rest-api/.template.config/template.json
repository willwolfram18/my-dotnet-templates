{
    "$schema": "http://json.schemastore.org/template",
    "identity": "willwolfram18.MyDotNetTemplates.Web.CleanRestApi",
    "shortName": "clean-rest-api",
    "name": "Clean Architecture REST API",
    "description": "A REST API template, organized in a 'Clean Architecture' style",
    "author": "William Wolfram",
    "classifications": [
        "Web",
        "WebAPI"
    ],
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "$AppName$",
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": [
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                ".template.config/**/*",
                "**/*.filelist",
                "**/*.user",
                "**/*.lock.json"
            ]
        }
    ],
    "symbols": {
        "CompanyName": {
            "type": "parameter",
            "description": "The name of the company the app is developed for.",
            "defaultValue": "",
            "datatype": "text",
            "replaces": "$Company$."
        },
        "TeamName": {
            "type": "parameter",
            "description": "The name of the team the application belongs to.",
            "defaultValue": "",
            "datatype": "text",
            "replaces": "$Team$."
        }
    }
}